<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/keyline_main"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/bill_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/bill_amount_hint"
        android:inputType="numberDecimal"
        android:text="@string/default_bill_amount"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tip_percentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_main"
        android:hint="@string/tip_percentage_hint"
        android:inputType="number"
        android:maxLength="8"
        android:text="@string/default_tip_percentage"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="@id/increase_tip"
        app:layout_constraintStart_toEndOf="@id/decrease_tip"
        app:layout_constraintTop_toBottomOf="@id/bill_amount" />


    <ImageButton
        android:id="@+id/decrease_tip"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_remove"
        app:layout_constraintBottom_toBottomOf="@id/tip_percentage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tip_percentage" />

    <ImageButton
        android:id="@+id/increase_tip"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="@id/tip_percentage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tip_percentage"
        app:layout_constraintTop_toTopOf="@id/tip_percentage" />

    <!-- Note: You can use the tools: syntax below to add data to your live previews -->

    <TextView
        android:id="@+id/total_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_main"
        android:textSize="@dimen/text_medium"
        app:layout_constraintBottom_toTopOf="@id/total_amount"
        app:layout_constraintTop_toBottomOf="@id/tip_percentage"
        tools:text="Tip : $12" />


    <TextView
        android:id="@+id/total_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_main"
        android:textSize="@dimen/text_large"
        app:layout_constraintTop_toBottomOf="@id/total_tip"
        tools:text="Total : $22" />

</androidx.constraintlayout.widget.ConstraintLayout>